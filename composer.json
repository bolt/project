{
    "name": "bolt/project",
    "type": "project",
    "description": "Bolt 4 standard project skeleton",
    "license": "MIT",
    "require": {
        "bobdenotter/weatherwidget": "^1.0",
        "bolt/assets": "^4.0",
        "bolt/core": "^4.0",
        "bolt/newswidget": "^1.1",
        "bolt/themes": "^3.1",
        "symfony/flex": "^1.6",
        "bobdenotter/configuration-notices": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "bolt:copy-assets": "symfony-cmd"
        },
        "post-create-project-cmd": [
            "cp -n .env.dist .env || true",
            "rm public/.gitignore .github/FUNDING.yml",
            "mv README_project.md README.md"
        ],
        "post-install-cmd": [
            "php bin/console bolt:copy-themes",
            "@auto-scripts",
            "php bin/console bolt:info"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "php bin/console bolt:info"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.4"
        },
        "public-dir": "public"
    }
}
